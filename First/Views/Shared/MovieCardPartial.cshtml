@model Movie

<div class="pb-1">
    <div class="card product-item border-0 mb-4">
        <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
            <img class="img-fluid w-100" src="@Model.Poster" alt="">
        </div>
        <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
            <h6 class="text-truncate mb-3">@Model.Title (@Model.Year)</h6>
            <p class="card-text">Janre : @Model.Type</p>
            <div class="d-flex justify-content-center">
                <h6>$123.00</h6><h6 class="text-muted ml-2"><del>$123.00</del></h6>
            </div>
        </div>
        <div class="card-footer d-flex justify-content-between bg-light border">
            <a my-type="Full" movie="@Model" class="btn btn-sm text-dark p-0"><i class="fas fa-eye text-primary mr-1"></i></a>
            <a a my-type="Modal" movie="@Model" data-open-modal class="btn btn-sm text-dark p-0"><i class="fas fa-shopping-cart text-primary mr-1"></i></a>
        </div>
    </div>
</div>



